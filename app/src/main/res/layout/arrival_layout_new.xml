<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/arrival_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_remaining"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical|center"
        android:text="还有"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/tv_stopdis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical|start"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_remaining"
        app:layout_constraintTop_toTopOf="@+id/tv_remaining" />


    <TextView
        android:id="@+id/tv_d"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:text="距离"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_remaining"
        app:layout_constraintStart_toStartOf="@+id/tv_remaining"
        app:layout_constraintTop_toBottomOf="@+id/tv_remaining" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical|start"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_d"
        app:layout_constraintEnd_toEndOf="@+id/tv_stopdis"
        app:layout_constraintStart_toStartOf="@+id/tv_stopdis"
        app:layout_constraintTop_toTopOf="@+id/tv_d" />

    <TextView
        android:id="@+id/tv_p"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:text="车牌号"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_d"
        app:layout_constraintStart_toStartOf="@+id/tv_d"
        app:layout_constraintTop_toBottomOf="@+id/tv_d" />

    <TextView
        android:id="@+id/tv_plate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical|start"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_p"
        app:layout_constraintEnd_toEndOf="@+id/tv_distance"
        app:layout_constraintStart_toStartOf="@+id/tv_distance"
        app:layout_constraintTop_toTopOf="@+id/tv_p"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
